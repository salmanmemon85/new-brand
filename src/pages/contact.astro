---
import Layout from '../layouts/Layout.astro' 
---
<Layout>

        <div class="inner-body">
      <div class="subBanner" style="background-image:url(assets/images/contact/banner.png);">
      <div class="banner-upper"></div>
        <div class="container" >
           <div class="row justify-content-center">
              <div class="col-12 col-lg-10">
                  <div class="banner-txt subbanner-txt">
                     <div class="">
                        <h2 class="type">We are here...</h2>
                        <h1>at your service<br><span>round the clock</span></h1>
                        <h5>CONTACT US NOW!</h5>
                        <img src="assets/images/about/text-clip.png" alt="" class="ban-text-clip">
                     </div>
                  </div>
              </div>
           </div>
        </div>
        <div class="banner-lower-part">
           <div class="container" style="position-relative">
           <img src="assets/images/icon/ban-clip1.png" alt="" class="ban-clip1 clip-rt-y2">
              <div class="row">
                 <div class="col-12">
                    <div class="banner-txt2 text-center">
                       <p>exceptional. outstanding. digital. experience</p>
                       <a href="#cont" class="down-btn">
                          <span>learn more</span>
                          <img src="assets/images/icon/arrow.png" alt="">
                       </a>
                    </div>
                 </div>
              </div>
           </div>
        </div>
      </div>
      <section id="cont" class="section-pad">
          <div class="container">
              <div class="row">
                  <div class="col-12">
                      <div class="main-contact-wrap">
                          <div class="row m-0">
                              <div class="col-md-7 col-12 p-0">
                                  <form method="post" action='https://newyorkwebcoders.com/get_quote_data.php'>
                                  <div class="main-contact-area contact-height">
                                      <label for="" class="contact-label">Full Name</label>
                                      <input type="text" name="customer_name" class="contact-field">
                                      <label for=""  class="contact-label">Email Address</label>
                                      <input type="text" name="customer_email" class="contact-field">
                                      <label for="" class="contact-label">Phone Number</label>
                                      <input type="text" name="phone_number" class="contact-field">
                                      <label for="" class="contact-label">Description</label>
                                      <textarea rows="8" name='message' class="contact-field"></textarea>
                                      <input type="hidden" name='lead_area' value="request a call" />
                                      <input type="submit" name="submit" class="btn-submit">
                                  </div>
                                  </form>
                              </div>
                              <div class="col-md-5 col-12 p-0">
                                  <div class="contact-height contact-img">
                                      
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
              <img src="assets/images/faq/clip.png" class="faq-clip contact-clip">
          </div>
          <img src="assets/images/banner/clip2.png" alt="" class="brand-clip2 clips">
      </section>
   </Layout>